{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**",
          "public/**",
          "package.json",
          "tailwind.config.js",
          "postcss.config.js"
        ],
        "installCommand": "npm install",
        "buildCommand": "npx tailwindcss build -o src/tailwind.output.css && npm run build",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
